@model IEnumerable<UCT.Models.Program>

@{
    ViewBag.Title = "Programs";
}

<h2>Programs</h2>

<ul style="list-style-type:none;float:left;width:100%;">
  <li style="display:inline;">@Html.ActionLink("Create a New Program", "Create")</li>
  <li style="display:inline;">@Html.ActionLink("Create a New Version", "CreateVersion")</li>
</ul>
<table style="clear:both;">
    <tr>
        <th>
            Program Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProgramID }) |
            @Html.ActionLink("Users", "Index", "ProgramUser", new { programID = item.ProgramID }, null) |
            @if (User.IsInRole("SuperUser")) 
            {        
                  @Html.ActionLink("Delete", "Delete", new { id = item.ProgramID }) 
            }
          else
            {
              <div> Delete</div>   
               @*@Html.ActionLink("Delete", "")*@
            }
        </td>
    </tr>
}

</table>
